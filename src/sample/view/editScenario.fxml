                <Button fx:id="saveName" mnemonicParsing="false" prefHeight="29.0" prefWidth="163.0" text="Zmień nazwę" />
            </children>
            <padding>
                <Insets bottom="15.0" left="12.0" right="12.0" top="15.0" />
            </padding>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
        </HBox>
    </top>
   <center>
      <AnchorPane fx:id="centerPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="600.0" prefWidth="300" />
   </center>
   <right>
      <VBox prefWidth="500.0" BorderPane.alignment="TOP_LEFT">
         <children>
            <Button fx:id="addNewVertexButton" mnemonicParsing="false" text="Dodaj stan" />
